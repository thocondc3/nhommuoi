@model TbBlog
@{
    List<TbBlogComment> blogComment = ViewBag.blogComment;


}
<!-- Blog Details Hero Begin -->
<section class="blog-details-hero set-bg" data-setbg="/img/blog/details/details-hero.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h2>The Moment You Need To Remove Garlic From The Menu</h2>
                    <ul>
                        <li>By Michael Scofield</li>
                        <li>January 14, 2019</li>
                        <li>8 Comments</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero End -->
<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form action="#">
                            <input type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Categories</h4>
                        <ul>
                            <li><a href="#">Rau xanh</a></li>
                            <li><a href="#">Củ quả (20)</a></li>
                            <li><a href="#">Rau gia vị (5)</a></li>
                            <li><a href="#">Rau hữu cơ (9)</a></li>
                            <li><a href="#">Ngũ cốc và hạt hữu cơ (10)</a></li>
                        </ul>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Tin tức gần đây</h4>
                        <div class="blog__sidebar__recent">
                            @foreach (var item in blogComment)
                            {
                                <a href="#" class="blog__sidebar__recent__item">
                                    <div class="media post-item">
                                    <div class="media-body">
                                        <h6>@Model.Title</h6>
                                        <span>MAR 05, 2019</span>
                                    </div>
                                    </div>
                                </a>
                            }
                           
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
               <div class="blog__details__text">
    <img src="@Model.Image" alt="" style="width: 100%; height: auto; max-width: 1200px; display: block; margin: 0 auto;">
    <>
        @Model.Title
    </>
    <h3>
        @Model.Description 
    </h3>
</div>

                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__author">
                              
                                <div class="blog__details__author__text">
                                    <h6>Michael Scofie</h6>
                                    <span>Admin</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <ul>
                                    <li><span>Categories:</span> Food</li>
                                    <li><span>Tags:</span>Rau xanh, Củ quả, Rau gia vị, Rau hữu cơ, Ngũ cốc và hạt hữu cơ</li>
                                </ul>
                                <div class="blog__details__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->

